<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/color_fragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/color_menu_title"
        style="@style/AppTheme.Title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/red_level"
            android:id="@+id/red_level"
            android:textColor="@color/colorRed"
            android:layout_gravity="center"
            style="@style/AppTheme.Label"/>

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:max="255"
            android:id="@+id/red_bar"
            android:thumbTint="@color/colorRed"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/green_level"
            android:id="@+id/green_level"
            android:textColor="@color/colorGreen"
            android:layout_gravity="center"
            style="@style/AppTheme.Label"/>

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:max="255"
            android:id="@+id/green_bar"
            android:thumbTint="@color/colorGreen"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/blue_level"
            android:id="@+id/blue_level"
            android:textColor="@color/colorBlue"
            android:layout_gravity="center"
            style="@style/AppTheme.Label"/>

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:max="255"
            android:id="@+id/blue_bar"
            android:thumbTint="@color/colorBlue"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/setColor"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/send_color_button"
        android:clickable="true"
        android:onClick="sendColor"/>

</LinearLayout>